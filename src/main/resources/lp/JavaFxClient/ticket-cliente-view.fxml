<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<Pane prefHeight="650" prefWidth="1000" style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lp.JavaFxClient.controllers.TicketClienteController">

    <children>

        <!-- Cartão central -->
        <VBox layoutX="50" layoutY="40" prefHeight="570" prefWidth="900" spacing="15" style="                 -fx-background-color: white;                 -fx-padding: 20;                 -fx-background-radius: 12;                 -fx-border-radius: 12;                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 12, 0, 0, 4);               ">

            <!-- Barra de botões -->
            <HBox alignment="CENTER_LEFT" spacing="12">

                <Button onAction="#onAtualizar" style="                             -fx-background-color:#4CAF50;                             -fx-text-fill:white;                             -fx-font-size: 14px;                             -fx-background-radius: 6;                         " text="Atualizar" />

                <Button onAction="#onRegistar" style="                             -fx-background-color:#2196F3;                             -fx-text-fill:white;                             -fx-font-size: 14px;                             -fx-background-radius: 6;                         " text="Registar" />

                <Button onAction="#onEditar" style="                             -fx-background-color:#FF9800;                             -fx-text-fill:white;                             -fx-font-size: 14px;                             -fx-background-radius: 6;                         " text="Editar" />

                <Button onAction="#onApagar" style="                             -fx-background-color:#f44336;                             -fx-text-fill:white;                             -fx-font-size: 14px;                             -fx-background-radius: 6;                         " text="Apagar" />

                <Button onAction="#onComentario" style="                             -fx-background-color:#9C27B0;                             -fx-text-fill:white;                             -fx-font-size: 14px;                             -fx-background-radius: 6;                         " text="Comentários" />
                <Button onAction="#onFiltro" style="                             -fx-background-color:#9C27B0;                             -fx-text-fill:white;                             -fx-font-size: 14px;                             -fx-background-radius: 6;                         " text="Filtrar" />
            <Button onAction="#onSair" style="-fx-background-color: red; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 6;" text="Sair" />
            </HBox>

            <!-- Tabela -->
            <TableView fx:id="tableTicketsC" prefHeight="480" style="-fx-border-radius: 8; -fx-background-radius: 8;">

                <columns>
                    <TableColumn fx:id="idCol" prefWidth="60" text="ID" />
                    <TableColumn fx:id="tituloCol" prefWidth="140" text="Título" />
                    <TableColumn fx:id="descricaoCol" prefWidth="180" text="Descrição" />
                    <TableColumn fx:id="categoriaCol" prefWidth="120" text="Categoria" />
                    <TableColumn fx:id="estadoCol" prefWidth="90" text="Estado" />
                    <TableColumn fx:id="prioridadeCol" prefWidth="100" text="Prioridade" />
                    <TableColumn fx:id="tecnicoCol" prefWidth="120" text="Técnico" />
                    <TableColumn fx:id="dataInicioCol" prefWidth="90" text="Início" />
                    <TableColumn fx:id="dataFimCol" prefWidth="90" text="Fim" />
                </columns>

            </TableView>

        </VBox>

    </children>
</Pane>

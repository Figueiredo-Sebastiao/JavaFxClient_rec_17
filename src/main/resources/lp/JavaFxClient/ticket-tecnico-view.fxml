<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" prefHeight="550" prefWidth="800" spacing="20" style="           -fx-background-color: #f4f4f4;           -fx-padding: 25;       " xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lp.JavaFxClient.controllers.TicketTecnicoController">

    <!-- Barra de botões -->
    <HBox alignment="CENTER_LEFT" spacing="15">
        <children>
            <Label style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #333333;" text="Tickets" />
            <Pane HBox.hgrow="ALWAYS" />
            <Button onAction="#onAtualizar" style="-fx-background-color:#4CAF50; -fx-text-fill:white; -fx-background-radius:6; -fx-padding:6 18;" text="Atualizar" />
            <Button onAction="#onAdicionar" style="-fx-background-color:#2196F3; -fx-text-fill:white; -fx-background-radius:6; -fx-padding:6 18;" text="Adicionar" />
            <Button onAction="#onEditar" style="-fx-background-color:#FF9800; -fx-text-fill:white; -fx-background-radius:6; -fx-padding:6 18;" text="Editar" />
            <Button onAction="#onRemove" style="-fx-background-color:#f44336; -fx-text-fill:white; -fx-background-radius:6; -fx-padding:6 18;" text="Remover" />
            <Button onAction="#onComentario" style="-fx-background-color:#9C27B0; -fx-text-fill:white; -fx-background-radius:6; -fx-padding:6 18;" text="Comentários" />
         <Button onAction="#onSair" style="-fx-background-color: red; -fx-text-fill: white; -fx-background-radius: 6; -fx-padding: 6 18;" text="Sair" />
        </children>
    </HBox>

    <!-- Tabela de tickets -->
    <TableView fx:id="tabelaTicketT" prefHeight="400" prefWidth="760" style="                    -fx-background-radius: 8;                    -fx-border-radius: 8;                    -fx-border-color: #cccccc;                    -fx-focus-color: #4CAF50;                    -fx-faint-focus-color: transparent;                ">
        <columns>
            <TableColumn fx:id="idCol" prefWidth="50" text="ID" />
            <TableColumn fx:id="tituloCol" prefWidth="150" text="Título" />
            <TableColumn fx:id="descricaoCol" prefWidth="200" text="Descrição" />
            <TableColumn fx:id="categoriaCol" prefWidth="100" text="Categoria" />
            <TableColumn fx:id="estadoCol" prefWidth="80" text="Estado" />
            <TableColumn fx:id="prioridadeCol" prefWidth="80" text="Prioridade" />
            <TableColumn fx:id="clienteCol" prefWidth="100" text="Cliente" />
            <TableColumn fx:id="dataInicioCol" prefWidth="100" text="Data Início" />
            <TableColumn fx:id="dataFimCol" prefWidth="100" text="Data Fim" />
        </columns>
    </TableView>
</VBox>

<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="lp.JavaFxClient.controllers.TicketTecnicoController"
      spacing="15" prefWidth="800" prefHeight="500"
      style="-fx-background-color: #f9f9f9; -fx-padding: 15;">

    <!-- Barra de botões -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <children>
            <Button text="Atualizar" onAction="#onAtualizar"
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 6 15;"/>
            <Button text="Adicionar" onAction="#onAdicionar"
                    style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 6 15;"/>
            <Button text="Editar" onAction="#onEditar"
                    style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 6 15;"/>
            <Button text="Remover" onAction="#onRemove"
                    style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 6 15;"/>
            <Button text="Comentários" onAction="#onComentario"
                    style="-fx-background-color: #9C27B0; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 6 15;"/>
        </children>
    </HBox>

    <!-- Tabela de tickets -->
    <TableView fx:id="tabelaTicketT" prefHeight="400" style="-fx-border-radius: 5; -fx-background-radius: 5; -fx-border-color: #cccccc;">
        <columns>
            <TableColumn fx:id="idCol" text="ID" prefWidth="50"/>
            <TableColumn fx:id="tituloCol" text="Título" prefWidth="150"/>
            <TableColumn fx:id="descricaoCol" text="Descrição" prefWidth="200"/>
            <TableColumn fx:id="categoriaCol" text="Categoria" prefWidth="100"/>
            <TableColumn fx:id="estadoCol" text="Estado" prefWidth="80"/>
            <TableColumn fx:id="prioridadeCol" text="Prioridade" prefWidth="80"/>
            <TableColumn fx:id="clienteCol" text="Cliente" prefWidth="100"/>
            <TableColumn fx:id="dataInicioCol" text="Data Início" prefWidth="100"/>
            <TableColumn fx:id="dataFimCol" text="Data Fim" prefWidth="100"/>
        </columns>
    </TableView>
</VBox>

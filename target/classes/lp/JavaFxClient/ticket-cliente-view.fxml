<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<Pane prefWidth="1000" prefHeight="650"
      xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="lp.JavaFxClient.controllers.TicketClienteController"
      style="-fx-background-color: #f4f4f4;">

    <children>

        <!-- Cartão central -->
        <VBox spacing="15"
              layoutX="50" layoutY="40"
              prefWidth="900" prefHeight="570"
              style="
                -fx-background-color: white;
                -fx-padding: 20;
                -fx-background-radius: 12;
                -fx-border-radius: 12;
                -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 12, 0, 0, 4);
              ">

            <!-- Barra de botões -->
            <HBox spacing="12" alignment="CENTER_LEFT">

                <Button text="Atualizar" onAction="#onAtualizar"
                        style="
                            -fx-background-color:#4CAF50;
                            -fx-text-fill:white;
                            -fx-font-size: 14px;
                            -fx-background-radius: 6;
                        "/>

                <Button text="Registar" onAction="#onRegistar"
                        style="
                            -fx-background-color:#2196F3;
                            -fx-text-fill:white;
                            -fx-font-size: 14px;
                            -fx-background-radius: 6;
                        "/>

                <Button text="Editar" onAction="#onEditar"
                        style="
                            -fx-background-color:#FF9800;
                            -fx-text-fill:white;
                            -fx-font-size: 14px;
                            -fx-background-radius: 6;
                        "/>

                <Button text="Apagar" onAction="#onApagar"
                        style="
                            -fx-background-color:#f44336;
                            -fx-text-fill:white;
                            -fx-font-size: 14px;
                            -fx-background-radius: 6;
                        "/>

                <Button text="Comentários" onAction="#onComentario"
                        style="
                            -fx-background-color:#9C27B0;
                            -fx-text-fill:white;
                            -fx-font-size: 14px;
                            -fx-background-radius: 6;
                        "/>
            </HBox>

            <!-- Tabela -->
            <TableView fx:id="tableTicketsC"
                       prefHeight="480"
                       style="-fx-border-radius: 8; -fx-background-radius: 8;">

                <columns>
                    <TableColumn fx:id="idCol" text="ID" prefWidth="60"/>
                    <TableColumn fx:id="tituloCol" text="Título" prefWidth="140"/>
                    <TableColumn fx:id="descricaoCol" text="Descrição" prefWidth="180"/>
                    <TableColumn fx:id="categoriaCol" text="Categoria" prefWidth="120"/>
                    <TableColumn fx:id="estadoCol" text="Estado" prefWidth="90"/>
                    <TableColumn fx:id="prioridadeCol" text="Prioridade" prefWidth="100"/>
                    <TableColumn fx:id="tecnicoCol" text="Técnico" prefWidth="120"/>
                    <TableColumn fx:id="dataInicioCol" text="Início" prefWidth="90"/>
                    <TableColumn fx:id="dataFimCol" text="Fim" prefWidth="90"/>
                </columns>

            </TableView>

        </VBox>

    </children>
</Pane>

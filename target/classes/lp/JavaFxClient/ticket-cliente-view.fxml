<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="lp.JavaFxClient.controllers.TicketClienteController"
      spacing="15"
      prefWidth="800"
      prefHeight="600"
      style="-fx-background-color: #f9f9f9; -fx-padding: 15;">

    <HBox spacing="10">
        <Button text="Atualizar" onAction="#onAtualizar"
                style="-fx-background-color:#4CAF50; -fx-text-fill:white;"/>
        <Button text="Registar" onAction="#onRegistar"
                style="-fx-background-color:#2196F3; -fx-text-fill:white;"/>
        <Button text="Editar" onAction="#onEditar"
                style="-fx-background-color:#FF9800; -fx-text-fill:white;"/>
        <Button text="Apagar" onAction="#onApagar"
                style="-fx-background-color:#f44336; -fx-text-fill:white;"/>
        <Button text="Comentários" onAction="#onComentario"
                style="-fx-background-color:#9C27B0; -fx-text-fill:white;"/>
    </HBox>

    <TableView fx:id="tableTicketsC">
        <columns>
            <TableColumn fx:id="idCol" text="ID"/>
            <TableColumn fx:id="tituloCol" text="Título"/>
            <TableColumn fx:id="descricaoCol" text="Descrição"/>
            <TableColumn fx:id="categoriaCol" text="Categoria"/>
            <TableColumn fx:id="estadoCol" text="Estado"/>
            <TableColumn fx:id="prioridadeCol" text="Prioridade"/>
            <TableColumn fx:id="tecnicoCol" text="Técnico"/>
            <TableColumn fx:id="dataInicioCol" text="Início"/>
            <TableColumn fx:id="dataFimCol" text="Fim"/>
        </columns>
    </TableView>

</VBox>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="480.0" prefWidth="400.0" spacing="15.0"
      xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="lp.JavaFxClient.controllers.TicketClienteFormController"
      style="-fx-background-color: #f9f9f9; -fx-padding: 20; -fx-border-radius: 10; -fx-background-radius: 10;">

    <!-- Título do formulário -->
    <Label fx:id="formTitle" text="Criar Ticket" style="-fx-text-fill: #333333; -fx-font-weight: bold;">
        <font>
            <Font size="24.0"/>
        </font>
    </Label>

    <!-- Título -->
    <HBox alignment="CENTER_LEFT" spacing="10.0" prefWidth="350">
        <children>
            <Label text="Título:" style="-fx-font-weight: bold; -fx-text-fill: #555555;" prefWidth="80"/>
            <TextField fx:id="txtTitulo" promptText="Digite o título"
                       style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #cccccc; -fx-padding: 6;"/>
        </children>
    </HBox>

    <!-- Descrição -->
    <HBox alignment="CENTER_LEFT" spacing="10.0" prefWidth="350">
        <children>
            <Label text="Descrição:" style="-fx-font-weight: bold; -fx-text-fill: #555555;" prefWidth="80"/>
            <TextField fx:id="txtDescricao" promptText="Digite a descrição"
                       style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #cccccc; -fx-padding: 6;"/>
        </children>
    </HBox>

    <!-- Prioridade -->
    <HBox alignment="CENTER_LEFT" spacing="10.0" prefWidth="350">
        <children>
            <Label text="Prioridade:" style="-fx-font-weight: bold; -fx-text-fill: #555555;" prefWidth="80"/>
            <ChoiceBox fx:id="cbPrioridade" prefWidth="150"
                       style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #cccccc;"/>
        </children>
    </HBox>

    <!-- Categoria -->
    <HBox alignment="CENTER_LEFT" spacing="10.0" prefWidth="350">
        <children>
            <Label text="Categoria:" style="-fx-font-weight: bold; -fx-text-fill: #555555;" prefWidth="80"/>
            <ChoiceBox fx:id="cbCategoria" prefWidth="150"
                       style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #cccccc;"/>
        </children>
    </HBox>

    <!-- Botões -->
    <HBox alignment="CENTER" spacing="15.0" prefWidth="350">
        <children>
            <Button fx:id="btnSalvar" mnemonicParsing="false" onAction="#onSalvar" text="Salvar"
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 8 20;"/>
            <Button fx:id="btnCancelar" mnemonicParsing="false" onAction="#onCancelar" text="Cancelar"
                    style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 8 20;"/>
        </children>
    </HBox>
</VBox>

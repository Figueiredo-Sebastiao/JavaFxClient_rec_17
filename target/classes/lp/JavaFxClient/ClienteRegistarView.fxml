<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="15"
      xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="lp.JavaFxClient.controllers.ClienteRegistarController"
      prefWidth="400" prefHeight="500"
      style="
          -fx-background-color: #f9f9f9;
          -fx-padding: 25;
          -fx-border-radius: 10;
          -fx-background-radius: 10;
      ">

    <!-- Título -->
    <Label text="Registar Cliente" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>

    <!-- Campos de input -->
    <TextField fx:id="txtNome" promptText="Nome"
               style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #cccccc; -fx-padding: 6;"/>
    <TextField fx:id="txtEmail" promptText="Email"
               style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #cccccc; -fx-padding: 6;"/>
    <TextField fx:id="txtSenha" promptText="Senha"
               style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #cccccc; -fx-padding: 6;"/>
    <TextField fx:id="txtMorada" promptText="Morada"
               style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #cccccc; -fx-padding: 6;"/>
    <TextField fx:id="txtTelefone" promptText="Telefone"
               style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #cccccc; -fx-padding: 6;"/>

    <!-- Botões -->
    <HBox alignment="CENTER" spacing="15">
        <Button text="Registar" onAction="#onSalvar"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 8 20;"/>
        <Button text="Cancelar" onAction="#onCancelar"
                style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 8 20;"/>
    </HBox>
</VBox>
